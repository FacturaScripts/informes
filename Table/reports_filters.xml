<table>
    <column>
        <name>id</name>
        <type>serial</type>
    </column>
    <column>
        <name>id_report</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>operator</name>
        <type>character varying(15)</type>
        <null>NO</null>
    </column>
    <column>
        <name>table_column</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>
    <column>
        <name>value</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>
    <constraint>
        <name>reports_filters_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>ca_reports_filters_reports</name>
        <type>FOREIGN KEY (id_report) REFERENCES reports (id) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
</table>