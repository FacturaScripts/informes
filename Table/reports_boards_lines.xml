<table>
    <column>
        <name>columns</name>
        <type>integer</type>
        <default>6</default>
        <null>NO</null>
    </column>
    <column>
        <name>height</name>
        <type>integer</type>
        <default>250</default>
        <null>NO</null>
    </column>
    <column>
        <name>id</name>
        <type>serial</type>
    </column>
    <column>
        <name>idreport</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>idreportboard</name>
        <type>integer</type>
        <null>NO</null>
    </column>
    <column>
        <name>sort</name>
        <type>integer</type>
    </column>
    <constraint>
        <name>reports_boards_lines_pkey</name>
        <type>PRIMARY KEY (id)</type>
    </constraint>
    <constraint>
        <name>uniq_reports_boards_lines</name>
        <type>UNIQUE (idreport,idreportboard)</type>
    </constraint>
    <constraint>
        <name>ca_reports_boards_lines_reports_boards</name>
        <type>FOREIGN KEY (idreportboard) REFERENCES reports_boards (id) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_reports_boards_lines_reports</name>
        <type>FOREIGN KEY (idreport) REFERENCES reports (id) ON DELETE CASCADE ON UPDATE CASCADE</type>
    </constraint>
</table>