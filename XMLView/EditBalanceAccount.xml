<view>
    <columns>
        <group name="data" numcolumns="12">
            <column name="code" display="none" numcolumns="2" order="100">
                <widget type="text" fieldname="id" onclick="EditBalance" readonly="true"/>
            </column>
            <column name="balance-code" display="none" numcolumns="2" order="110">
                <widget type="text" fieldname="idbalance"/>
            </column>
            <column name="account-code" numcolumns="2" order="120">
                <widget type="text" fieldname="codcuenta" icon="fa-solid fa-hashtag" required="true"/>
            </column>
            <column name="description" order="130">
                <widget type="text" fieldname="desccuenta" readonly="true"/>
            </column>
        </group>
    </columns>
</view>